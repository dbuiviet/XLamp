    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Tên mạng wifi:"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryDark"/>
            <EditText
                android:id="@+id/tfWifiName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="5dp"
                android:background="@drawable/edit_text_background"
                android:textColor="@color/cardview_dark_background"
                android:textCursorDrawable="@null"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Mật khẩu:"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryDark"/>
            <EditText
                android:id="@+id/tfPassword"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="5dp"
                android:background="@drawable/edit_text_background"
                android:textColor="@color/cardview_dark_background"
                android:textCursorDrawable="@null"
                />

            <Button
                android:id="@+id/saveWifiBtn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="20dp"
                android:background="@drawable/button_background"
                android:onClick="onSaveWifiButtonClicked"
                android:text="Save Wifi Setting"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="normal"
                />

        <Button
            android:id="@+id/audioStreamBtn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="20dp"
            android:background="@drawable/button_background"
            android:onClick="onAudioStreamButtonClicked"
            android:text="Audio Stream"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="normal"
            />

        <TextView
            android:id="@+id/connect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="@string/disconnected"
            android:textColor="#0e1686"
            android:textSize="14sp" />

